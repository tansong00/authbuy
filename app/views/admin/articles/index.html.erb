



<div class="content">

  <div class="header">
    <h1 class="page-title">Product Maneger</h1>
  </div>

  <ul class="breadcrumb">
    <li><a href="">Home</a> <span class="divider">/</span></li>
    <li><a href="">文章管理</a> <span class="divider">/</span></li>
    <li class="active">Data</li>
  </ul>

  <div class="container-fluid">
    <div class="row-fluid">
      <div class="btn-toolbar">
        <h3><%= link_to '新建文章' ,new_admin_article_path %></h3>
        <div class="btn-group">
        </div>
      </div>
    </div>
    <div class="well">
      <div class="grid-view" id="product-grid">
        <div class="summary">第 1-10 条, 共 13 条.</div>
        <table class="items table table-striped">
          <thead>
          <tr>
            <th id="product-grid_c0">产品ID</th><th id="product-grid_c1">文章标题</th><th id="product-grid_c2">文章作者</th><th id="product-grid_c3">发布时间</th><th id="product-grid_c4" class="button-column">&nbsp;</th></tr>
          </thead>
          <tbody>
          <% @articles.each do |article| %>
              <tr class="odd">
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.author %></td>
                <td><%= article.created_at.strftime("%y-%m-%d %H:%M:%S") %></td>
                <td><%= link_to '查看', admin_article_path(article) %><span class="separator">|</span><%= link_to '编辑',edit_admin_article_path(article) %><span class="separator">|</span><%= link_to '删除',admin_article_path(article), :method => :delete %></td>
                <!--<td class="button-column">
                  <a href="#" rel="tooltip" title="" class="view" data-original-title="查看"></a>
                  <a href="#" rel="tooltip" title="" class="update" data-original-title="更新"><i class="icon-pencil"></i></a>
                  <a href="#" rel="tooltip" title="" class="delete" data-original-title="删除"><i class="icon-trash"></i></a>
                </td>  -->
              </tr>

          <% end %>
          </tbody>
        </table>
        <div class="pagination">
          <%= paginate @articles %>
        </div>	</div>


      <footer>
        <hr>

        <!-- Purchase a site license to remove this link from the footer: http://www.portnine.com/bootstrap-themes -->
        <p class="pull-right">A <a target="_blank" href="http://www.portnine.com/bootstrap-themes">Free Bootstrap Theme</a> by <a target="_blank" href="http://www.portnine.com">Portnine</a></p>

        <p>&copy; 2012 <a target="_blank" href="http://www.portnine.com">Portnine</a></p>
      </footer>
    </div>
  </div>
</div>